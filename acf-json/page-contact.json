                             {
                                "key": "field_contact_detail_link",
                                "label": "Link (Optional)",
                                "name": "link",
                                "type": "text",
                                "instructions": "If filled, content becomes a link"
                            }
                        ]
                    },
                    {
                        "key": "field_contact_map_image",
                        "label": "Map Image",
                        "name": "map_image",
                        "type": "image",
                        "return_format": "array"
                    }
